{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "title",
      "composer",
      "librettist",
      "premiere",
      "language",
      "duration_min",
      "act_count",
      "notable_arias",
      "lead_roles",
      "themes"
    ],
    "properties": {
      "title": {
        "type": "string"
      },
      "composer": {
        "type": "object",
        "required": ["name", "period"],
        "properties": {
          "name": {
            "type": "string"
          },
          "period": {
            "type": "string"
          }
        }
      },
      "librettist": {
        "type": "string"
      },
      "premiere": {
        "type": "object",
        "required": ["city", "venue", "date"],
        "properties": {
          "city": {
            "type": "string"
          },
          "venue": {
            "type": "string"
          },
          "date": {
            "type": "string"
          }
        }
      },
      "language": {
        "type": "string"
      },
      "duration_min": {
        "type": "integer",
        "minimum": 1
      },
      "act_count": {
        "type": "integer",
        "minimum": 1
      },
      "notable_arias": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "lead_roles": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["character", "voice_type"],
          "properties": {
            "character": {
              "type": "string"
            },
            "voice_type": {
              "type": "string"
            }
          }
        }
      },
      "themes": {
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    }
  }
}
